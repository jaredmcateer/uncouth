{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "declarationDir": "./dist/types/",
    "sourceMap": true,
    "outDir": "./dist/lib",
    "strict": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "exclude": ["dist", "node_modules"]
}
